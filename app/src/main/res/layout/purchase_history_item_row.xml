<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorPrimary"
    android:padding="10dp">

    <TextView
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/productNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name :"/>

    <TextView
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/productCategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productNameText"
        android:text="Product Category :"/>

    <TextView
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/productPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productCategoryText"
        android:text="Product Price :"/>

    <TextView
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/productScanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productPriceText"
        android:text="Bar/QR Code :"/>

    <TextView
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productScanText"
        android:text="Purchased Date :"/>

    <TextView
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateTextView"
        android:text="Time :"/>

</RelativeLayout>